<div class="box-header with-border">
  <h3 class="box-title">Edycja profilu</h3>
</div>

<div class="box-body">
  <div class="row">
    <div class="col-md-12">
      <p class="text-center">
        <%= form_for([:service, @admin], html: { class: "form-horizontal" }) do |f| %>
          <div class="form-group">
            <%= f.label :name, t('.name'), class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :surname, t('.surname'), class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :surname, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit t("buttons.submit"), class: "btn btn-success" %>
            </div>
          </div>
        <% end %>
      </p>
    </div>
  </div>
</div>
