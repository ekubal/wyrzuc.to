.box-header.with-border
  .row
    .col-sm-6
      %h3.box-title 
        Trasy
        &raquo;
        = @route
    .col-sm-6.text-right
      = link_to 'Dodaj nowy punkt na trasie', new_zut_route_route_container_path(@route), class: 'btn btn-primary'

.box-body.table-responsive.no-padding
  %table.table.table-hover
    %thead
      %tr
        %th{ colspan: 2} Kolejność
        %th Adres
        %th.action Usuń
    %tbody
      - @route_containers.each_with_index do |container, inx|
        %tr
          %td.sort
            - if inx > 0
              = link_to(zut_route_route_container_move_up_path(@route, container), class: [:btn, 'btn-primary']) do
                %i.fa.fa-chevron-up
          %td.sort
            - if inx < @route_containers.count - 1
              = link_to(zut_route_route_container_move_down_path(@route, container), class: [:btn, 'btn-primary']) do
                %i.fa.fa-chevron-down
          %td= container.street
          %td.action= link_to 'usuń', zut_route_route_container_path(@route, container), method: :delete, class: 'btn btn-danger'

  

