<div class="location">
  <%= presenter.street %>
  <button type="button" class="close x-close-content"><span>&times;</span></button>
</div>

<div class="tse-scrollable x-scroll">
  <div class="tse-scroll-content">
    <div class="tse-content date-set">
      <% presenter.data.each do |item| %>
        <div class="date x-place">
          <%= link_to place_info_path(item[:id]), remote: true do %>
            <b>
              <%= item[:date] ? l(item[:date], format: :place_info) : "Co #{t("date.day_names")[item[:weekday]]}" %>
            </b>
            <br>
            <%= item[:title] %>
          <% end %>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>

<div class="news">
  <h2>Informacje</h2><br>
  <div class="x-place-content">
    <p>Proszę kliknęć w wybrany element na liscie, aby wyświetlić szczegółowe dane.</p>
  </div>
</div>
