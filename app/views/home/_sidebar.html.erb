<div class='sidebar x-sidebar'>
  <a href="#" class="handle">Pokaż dodatkowe informacje</a>

  <div class="closed">
    <%= image_tag "icon_kalendarz.png", class: "center", style: "width: 44px; height: 42px" %>
  </div>

  <div class="open">
    <div class="text-center">
      <div class="sprawdzTermin x-form">
        <h2>Chcesz aby Gdańsk był bardziej czystym miastem? Tu znajdziesz informacje o zbiórce różnych typów odpadów!</h2>
        <%= image_tag "icon_kalendarz.png", style: "width: 44px; height: 42px" %>
        <h3>Sprawdź terminy<br />odbioru odpadów</h3>

        <hr class="short" />

        <%= form_tag search_places_home_path, remote: true do %>
          <%= autocomplete_field_tag :user_location, nil, autocomplete_location_full_address_home_path, required: true,  class: "x-user-location", placeholder: t("placeholders.user_location") %>
          <%= hidden_field_tag :count, 1 %>
          <%= submit_tag t('buttons.search') %>
        <% end %>
      </div>

      <div class="x-content hidden"></div>
    </div>
  </div>
</div>
